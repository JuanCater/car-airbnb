<h1 class="text-center mt-3">Available Cars</h1>

<%= form_with url: cars_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a car"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="mt-4 mb-5" style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<ul>
  <% @cars.each do |car| %>
    <li><%= link_to "#{car.brand} #{car.model}", car_path(car)%></i>
  <% end %>
</ul>

<p class="btn btn-outline-danger"><%= link_to "Create new car", new_car_path%></a>
